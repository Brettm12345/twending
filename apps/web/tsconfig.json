{
	"include": ["**/*.ts", "**/*.tsx"],
	"compilerOptions": {
		"target": "ESNext",
		"jsx": "preserve",
		"module": "ESNext",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"types": ["vite/client"],

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,

		/* Linting */
		"skipLibCheck": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
